<div class="form-signin">
  <h2 class="form-signin-heading">Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => 'form-signin') do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', :class => 'input-block-level' %>
    <%= f.password_field :password, :placeholder => 'Password', :class => 'input-block-level' %>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', :class => 'input-block-level' %>
    <%= f.submit 'Sign up',:class=>'btn btn-primary' %>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>