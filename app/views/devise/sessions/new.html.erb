<div class="form-signin">
  <h2 class="form-signin-heading">Sign in</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-signin') do |f| %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', :class => 'input-block-level' %>
    <%= f.password_field :password, :placeholder => 'Password', :class => 'input-block-level' %>
    <% if devise_mapping.rememberable? %>
      <label class="checkbox"> <%= f.check_box :remember_me %> Remember me </label>
    <% end %>
    <%= f.submit 'Sign up',:class=>'btn btn-primary' %>
  <% end %>
  <%= render 'devise/shared/links' %>
</div>